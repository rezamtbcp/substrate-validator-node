server {
  listen 0.0.0.0:80;
  proxy_pass localhost:9944;
}


server {
	listen 80 default_server;
	listen [::]:80 default_server;


	root /var/www/html;

	index index.html index.htm index.nginx-debian.html;

	server_name _;

	location / {
       try_files $uri $uri/ =404;

	   proxy_pass http://localhost:{{ p2p_port }};
       proxy_set_header X-Real-IP $remote_addr;
       proxy_set_header Host localhost:{{ p2p_port }};
       proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;

       proxy_http_version 1.1;
       proxy_set_header Upgrade $http_upgrade;
       proxy_set_header Connection "upgrade";

    }
}


server {

	# SSL configuration
	#
	# listen 443 ssl default_server;
	# listen [::]:443 ssl default_server;

	root /var/www/html;

	# Add index.php to the list if you are using PHP
	index index.html index.htm index.nginx-debian.html;
    server_name rpc.standardchain.xyz; # managed by Certbot


	location / {
	  try_files $uri $uri/ =404;

          proxy_pass http://localhost:{{ p2p_port }};
          proxy_set_header X-Real-IP $remote_addr;
          proxy_set_header Host localhost:9944;
          proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;

          proxy_http_version 1.1;
          proxy_set_header Upgrade $http_upgrade;
          proxy_set_header Connection "upgrade";

	}



    listen [::]:443 ssl ipv6only=on; # managed by Certbot
    listen 443 ssl; # managed by Certbot
    ssl_certificate /etc/letsencrypt/live/rpc.standardchain.xyz/fullchain.pem; # managed by Certbot
    ssl_certificate_key /etc/letsencrypt/live/rpc.standardchain.xyz/privkey.pem; # managed by Certbot
    include /etc/letsencrypt/options-ssl-nginx.conf; # managed by Certbot
    ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem; # managed by Certbot

}
server {
    if ($host = rpc.standardchain.xyz) {
        return 301 https://$host$request_uri;
    } # managed by Certbot


	listen 80 ;
	listen [::]:80 ;
    server_name rpc.standardchain.xyz;
    return 404; # managed by Certbot


}